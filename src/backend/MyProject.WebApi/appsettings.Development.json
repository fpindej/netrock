{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Fatal"
      }
    }
  },
  "Caching": {
    "Enabled": true,
    "DefaultExpiration": "00:10:00"
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 300,
      "Window": "00:00:10"
    },
    "Registration": {
      "PermitLimit": 50,
      "Window": "00:00:10"
    },
    "Auth": {
      "PermitLimit": 300,
      "Window": "00:00:10"
    },
    "Sensitive": {
      "PermitLimit": 300,
      "Window": "00:00:10"
    },
    "AdminMutations": {
      "PermitLimit": 300,
      "Window": "00:00:10"
    }
  },
  "Authentication": {
    "Jwt": {
      "AccessTokenLifetime": "01:40:00"
    }
  },
  "Email": {
    "FrontendBaseUrl": "http://localhost:{INIT_FRONTEND_PORT}"
  },
  "Hosting": {
    "ForceHttps": false
  },
  "Captcha": {
    "SecretKey": "1x0000000000000000000000000000000AA"
  },
  "Cors": {
    "AllowAllOrigins": true
  },
  "Seed": {
    "Users": [
      { "Email": "superadmin@test.com", "Password": "SuperAdmin123!", "Role": "SuperAdmin" },
      { "Email": "admin@test.com", "Password": "AdminUser123!", "Role": "Admin" },
      { "Email": "testuser@test.com", "Password": "TestUser123!", "Role": "User" }
    ]
  }
}

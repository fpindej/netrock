{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ]
  },
  "ConnectionStrings": {
    "Database": "<DB_CONNECTION_STRING>"
  },
  "Caching": {
    "Enabled": true,
    "DefaultExpiration": "00:10:00"
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 120,
      "Window": "00:01:00",
      "QueueLimit": 0,
      "QueueProcessingOrder": "OldestFirst"
    },
    "Registration": {
      "PermitLimit": 10,
      "Window": "00:01:00",
      "QueueLimit": 0,
      "QueueProcessingOrder": "OldestFirst"
    },
    "Auth": {
      "PermitLimit": 10,
      "Window": "00:01:00",
      "QueueLimit": 0,
      "QueueProcessingOrder": "OldestFirst"
    },
    "Sensitive": {
      "PermitLimit": 5,
      "Window": "00:05:00",
      "QueueLimit": 0,
      "QueueProcessingOrder": "OldestFirst"
    },
    "AdminMutations": {
      "PermitLimit": 30,
      "Window": "00:01:00",
      "QueueLimit": 0,
      "QueueProcessingOrder": "OldestFirst"
    }
  },
  "Authentication": {
    "Jwt": {
      "Key": "CHANGE_ME_IN_PRODUCTION__This_Is_A_Development_Only_Placeholder_Key_64chars!",
      "Issuer": "MyProjectIssuer",
      "Audience": "MyProjectAudience",
      "AccessTokenLifetime": "00:10:00",
      "SecurityStampClaimType": "security_stamp",
      "RefreshToken": {
        "PersistentLifetime": "7.00:00:00",
        "SessionLifetime": "1.00:00:00"
      }
    },
    "EmailToken": {
      "TokenLengthInBytes": 32,
      "Lifetime": "1.00:00:00"
    }
  },
  "JobScheduling": {
    "Enabled": true,
    "WorkerCount": 4
  },
  "Cors": {
    "AllowAllOrigins": false,
    "AllowedOrigins": [
      "https://your-production-domain.com"
    ],
    "PolicyName": "DefaultCorsPolicy"
  },
  "Email": {
    "FromAddress": "noreply@example.com",
    "FromName": "MyProject",
    "FrontendBaseUrl": "https://your-production-domain.com",
    "Smtp": {
      "Host": "",
      "Port": 587,
      "Username": "",
      "Password": "",
      "UseSsl": true
    }
  },
  "Hosting": {
    "ForceHttps": true,
    "ReverseProxy": {
      "TrustedNetworks": [],
      "TrustedProxies": []
    }
  },
  "Captcha": {
    "SecretKey": "<TURNSTILE_SECRET_KEY>"
  },
  "AllowedHosts": "*"
}
